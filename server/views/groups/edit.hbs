<div class="container">
    <h1>Изменить данные</h1>
    <form method="post">
        <div class="form-group">
            <input type="number" name="name" id="name" value="{{group.name}}">
        </div>
        <div class="form-group">
            <select name="id_directions" id="id_directions">
                {{#if directions }}
                    {{#each directions}}
                        <option value="{{this.id_direction}}">{{this.name_direction}}</option>
                    {{/each}}
                {{/if}}
            </select>
        </div>
        <input class="btn btn-primary" type="submit" value="Изменить">
    </form>
</div>