<div class="container">
    <form method="post" class="offset-3 col-6">
        <div class="form-group">
            <label for="surname">Фамилия:</label>
            <input type="text" name="surname" id="surname" class="form-control" value="{{surname}}">
        </div>
        <div class="form-group">
            <label for="name">Имя:</label>
            <input type="text" name="name" id="name" class="form-control" value="{{name}}">
        </div>
        <div class="form-group">
            <label for="lastname">Отчество:</label>
            <input type="text" name="lastname" id="lastname" class="form-control" value="{{lastname}}">
        </div>
        
        <div class="form-group">
            <label for="gender">Пол:</label>
            <select name="gender" id="gender" class="form-control">
                {{#equal gender "M"}}
                <option value="M" selected>Мужчина</option>
                <option value="F">Девушка</option>
                {{else}}
                <option value="M">Мужчина</option>
                <option value="F" selected>Девушка</option>
                {{/equal}}
            </select>
        </div>
        <div class="form-group">
            <label for="birthday">День рождения:</label>
            <input type="date" name="birthday" id="birthday" class="form-control" value="{{birthday}}">
        </div>
        <div class="form-group">
            <label for="get_card">Дата получения студ. билета:</label>
            <input type="date" name="get_card" id="get_card" class="form-control" value="{{get_card}}">
        </div>
        <div class="form-check">
            <input type="checkbox" name="is_head" id="is_head" class="form-check-input" value="{{is_head}}">
            <label for="is_head">Признак старосты</label>
        </div>
        {{#int}}{{/int}}
        <div class="form-group">
            <label for="id_group">Номер группы:</label>
            <select name="id_group" id="id_group" class="form-control">
                {{#if id_group}}
                    {{#each groups}}
                        {{#equal this.name ../id_group}}
                            <option value="{{this.name}}" selected>{{this.name}}</option>
                        {{else}}
                        <option value="{{this.name}}">{{this.name}}</option>
                        {{/equal}}
                    {{/each}}
                {{/if}}
            </select>
        </div>
        <input type="submit" value="Изменить" class="btn btn-primary">
        <a href="../" class="btn btn-primary">Назад</a>
    </form>
</div>